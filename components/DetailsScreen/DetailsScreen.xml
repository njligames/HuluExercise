    <script type="text/brightscript" uri="pkg:/source/utils.brs" />
    <interface>
        <field id="content" type="node" />
        <field id="jumpToItem" type="integer" onChange="OnJumpToItem" value="0" alwaysNotify="true" />
        <field id="itemFocused" type="integer" alwaysNotify="true" />
        <field id="buttonSelected" type="integer" alias="buttons.itemSelected" />
    </interface>
    <children>
        <Poster
            id="poster"
            loadDisplayMode="scaleToFit"
			translation="[0,0]"
            width="1281"
            height="720"
        />
        <Label
            id="titleLabel"
            wrap="true"
            maxLines="2"
            horizAlign="left"
			translation="[93,183]"
            width="501"
            height="57"
            font="font:LargeBoldSystemFont"
        />
        <Label
            id="descriptionLabel"
            wrap="true"
            maxLines="6"
            horizAlign="left"
			translation="[93,363]"
            width="498"
            height="108"
            font="font:SmallestSystemFont"
        />
        <LabelList
            id="buttons"
            itemSpacing="[0,9]"
            itemSize="[264, 42]"
			translation="[93,306]"
            textHorizAlign="center"
            font="font:SmallSystemFont"
            focusBitmapBlendColor="0x01B6D1FF"
            focusedColor="0xFFFFFFFF"
        />

    </children>
</component>

